[*]
charset = utf-8                  # 파일 인코딩: UTF-8
end_of_line = lf                 # 줄바꿈 형식: LF (Linux/Unix 스타일)
insert_final_newline = true      # 파일 끝에 빈 줄 추가
trim_trailing_whitespace = true  # 줄 끝 공백 제거

[*.py]
indent_style = space
indent_size = 4                  # Python에서는 4칸 공백

[*.md]
trim_trailing_whitespace = false # Markdown 파일에서 공백 제거하지 않음
max_line_length = off            # 줄 길이 제한 없음

[Makefile]
indent_style = tab               # Makefile에서는 탭 사용

[*.yml]
indent_style = space
indent_size = 2                  # YAML 파일에서는 2칸 공백
